(ns dominio.persistence
 (:require 
   [clojure.java.jdbc :as sql]))

(def ILS-DB 
   {
    :classname   "org.h2.Driver"
    :subprotocol "h2:file"
    :subname     (str (System/getProperty "user.dir") "/" "demo")
    :user        "sa"
    :password    ""
   }
  )
  
(defn- cria-tabela-exercicio
"Funcao para testes. NÃ£o use diretamente!" 
[]
  (sql/with-connection ILS-DB
    (sql/create-table :exercicio
           [:id "VARCHAR NOT NULL"]
           [:xmlexercicio "CLOB NOT NULL"]
           
))) 

